<div class="container">
			<br/>
      <h1> Connecte-toi !</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
          <%= label_tag 'Ton email : ' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'email', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>     
        <br />

        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3 text-center font-weight-bold">
            <%= label_tag 'Ton Mot De Passe (chut!) : ' %>
          </div>
          <div class="col-3">
            <%= text_field_tag 'password', value = nil, options = {style:"height:30px;width:300px;vertical-align:text-top"}%>
          </div>
        </div>
        <br />
        <center>
        <%= submit_tag "Let's Go !", class: 'btn btn-info btn-submit'  %>
      </center>
      <% end %>